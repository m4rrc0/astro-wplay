---
import { Icon } from "astro-icon/components"
import { Md } from "@components"
import { Markdown } from "astro-remote"

const header = "Hello world"
const content = `
## {header}
<br />
<Icon name="gridicons:share-computer" size="1em" />
`

const { privateRenderMarkdownDoNotUse: renderMd } = Astro

const remoteContent = await renderMd(content)
// console.log({content})
---

<Markdown>
  ### {header}

  <br />
  <Icon name="gridicons:share-computer" size="1em" />
</Markdown>

<Markdown
  {header}
  content={`
### {header}
<br />
<Icon name="gridicons:share-computer" size="1em" />
`}
/>

<Markdown {header}>
  {content}
</Markdown>

<Markdown {header} {content} />

<Markdown {header}>
  {remoteContent}
</Markdown>

<Markdown {header} content={remoteContent} />

<div set:html={remoteContent} />
