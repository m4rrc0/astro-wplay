---
// import { Markdown } from 'astro/components';
import { IO, Md } from '@components'

const { block, lang } = Astro.props;
const t = block?.translations.find(({ languages_code }) => languages_code === lang)

// const hasSomethingToShow = t?.title || t?.subtitle || t?.featured_image?.src || t?.text
---

<IO div $skipNoInner>
    <IO h2 $skipNoInner>{t.title}</IO>
    <IO p $skipNoInner>{t.subtitle}</IO>
    <IO div $skipNoInner>
        <IO img $skip={!t.featured_image?.src} src={t.featured_image?.src} class="" style="max-width: 100px;" />
        <!-- <Markdown content={t.text} /> -->
        <Md $skip={!t.text} content={t.text} />
    </IO>
</IO>
