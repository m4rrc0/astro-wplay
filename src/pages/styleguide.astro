---
// Component Imports
import SkeletonLayout from '@layouts/SkeletonLayout.astro'
import BasicPageLayout from '@layouts/BasicPageLayout.astro'
import SEO from '@components/SEO.astro'
import Paragraph from '@partials/styleguide/Paragraph.astro';
import DemoBoxComplete from '@partials/styleguide/DemoBoxComplete.astro'

let list6 = ['main', 'danger', 'trans'];
---

<SkeletonLayout>
  <SEO
    slot="head"
    lang="en"
    ogType="website"
    title="Styleguide"
    description="A (soon to be) extensive style guide using nuds libraries"
    canonicalUrl="https://www.wanna-play.be/styleguide/" />

  <BasicPageLayout>
    <div class="box no-border stack gap-down" style="--gap-down: 1em">
      <h1>Styleguide</h1>
      <p>
        This is actually more of a
        <strong>
          <em>work in progress</em>
        </strong>
        design system.
      </p>
      <section class="stack gap-down" style="--gap-down: 1em;">
        <h2>Typography</h2>
        <h3>Headings</h3>
        <p class="h1">An h1 fox jumps over the fence or whatever</p>
        <p class="h2">An h2 fox jumps over the fence or whatever</p>
        <p class="h3">An h3 fox jumps over the fence or whatever</p>
        <p class="h4">An h4 fox jumps over the fence or whatever</p>
        <p class="h5">An h5 fox jumps over the fence or whatever</p>
        <p class="h6">An h6 fox jumps over the fence or whatever</p>
        <h3>Mix</h3>
        <p class="h1">An h1 fox jumps over the fence or whatever</p>
        <Paragraph />
        <p class="h2">An h2 fox jumps over the fence or whatever</p>
        <Paragraph />
        <p class="h3">An h3 fox jumps over the fence or whatever</p>
        <Paragraph />
        <p class="h4">An h4 fox jumps over the fence or whatever</p>
        <Paragraph />
        <p class="h5">An h5 fox jumps over the fence or whatever</p>
        <Paragraph />
        <p class="h6">An h6 fox jumps over the fence or whatever</p>
        <Paragraph />
      </section>

      <section class="stack gap-down" style="--gap-down: 1em;">
        <h2>Blocks and boxes</h2>
        <h3>A code block</h3>
        <code class="code-block">
          <pre>
            <p class="h2">An h2 fox jumps over the fence or whatever</p>
            <p class="h3">An h3 fox jumps over the fence or whatever</p>
            <p class="h4">An h4 fox jumps over the fence or whatever</p>
          </pre>
        </code>
        <h3>A blockquote</h3>
        <blockquote>
          Alway pay attention to the coupling you are introducing in your code
          base when using specific tools. Ask yourself: "if I want to change this
          piece, how easy will it be?"
        </blockquote>
      </section>

      <section class="stack gap-down" style="--gap-down: 1em;">
        <h2>Spacing</h2>
        <p class="size-h9">size-h9</p>
        <div
          class="color-palette-variation-contrast"
          style="height: var(--size-h9); display: flex; align-items: center;"></div>
        <p class="size-h8">size-h8</p>
        <div
          class="color-palette-variation-contrast"
          style="height: var(--size-h8); display: flex; align-items: center;"></div>
        <p class="size-h7">size-h7</p>
        <div
          class="color-palette-variation-contrast"
          style="height: var(--size-h7); display: flex; align-items: center;"></div>
        <p class="size-h6">size-h6</p>
        <div
          class="color-palette-variation-contrast"
          style="height: var(--size-h6); display: flex; align-items: center;"></div>
        <p class="size-h5">size-h5</p>
        <div
          class="color-palette-variation-contrast"
          style="height: var(--size-h5); display: flex; align-items: center;"></div>
        <p class="size-h4">size-h4</p>
        <div
          class="color-palette-variation-contrast"
          style="height: var(--size-h4); display: flex; align-items: center;"></div>
      </section>

      <section class="stack gap-down" style="--gap-down: 1em;">
        <h2>Grid</h2>
        <div
          class="grid gap-down-h8"
          style="--width-column: calc(var(--measure) / 3);">
          <div>
            {list6.map(i => (
              <article
                class={`box no-border stack gap-down color-palette-${i}`}
                style="--padding: var(--size-h5); --gap-down: 1em;">
                <p class="h3">An h3 fox jumps over the fence or whatever</p>
                <Paragraph />
              </article>

            ))}
          </div>
        </div>
      </section>

      <section class="stack gap-down" style="--gap-down: 1em;">
        <h2>Colors</h2>

        {list6.map(i => ( <DemoBoxComplete {i} /> ))}
        
      </section>
    </div>
  </BasicPageLayout>
</SkeletonLayout>




<style>
  h1,
  h2,
  h3 {
    border-bottom: solid 1px;
  }
</style>
